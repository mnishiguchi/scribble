<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <h2>Resend confirmation instructions</h2>

    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>

      <%= f.input :email, required: true, autofocus: true, class: 'form-control' %>
      <%= f.button :submit, "Resend confirmation instructions", class: 'btn btn-primary' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
